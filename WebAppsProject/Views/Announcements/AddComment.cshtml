@model WebAppsProject.Models.Comment
@{
    ViewData["Title"] = "AddComment";
}
<h2>Create</h2>
<h4>Comment</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Comments" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Date" value="@DateTime.Now" />
            <input type="hidden" asp-for="AId" value="@Model.Announcement.Id" />
            <div class="form-group">
                <label asp-for="Post" class="control-label"></label>
                <input asp-for="Post" class="form-control" />
                <span asp-validation-for="Post" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
    